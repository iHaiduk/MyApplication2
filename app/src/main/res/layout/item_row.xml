<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout   
    android:id="@+id/current"
    android:layout_width="fill_parent"   
    android:layout_height="fill_parent"   
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:padding="5dip" android:gravity="top">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/idRow" android:layout_alignBottom="@+id/txtTitle"
            android:layout_alignParentStart="true" android:layout_alignTop="@+id/txtTitle" android:padding="10dp"
            android:textColor="#ffb4b4b4"/>
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_width="match_parent"
        android:id="@+id/txtTitle"
        android:padding="10dp" android:layout_alignParentTop="true" android:layout_toEndOf="@+id/idRow"
        android:textSize="15dp" android:textColor="@android:color/white">
    </TextView>

</RelativeLayout>