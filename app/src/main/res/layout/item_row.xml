<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView android:layout_width="35dp" android:layout_height="wrap_content" android:text="0"
                  android:gravity="center" android:id="@+id/idRow"
                  android:textColor="#ffb4b4b4" android:width="30dp"
                  android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                  android:layout_alignBottom="@+id/textView4"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="Large Text"
              android:id="@+id/testname" android:textSize="13dp"
              android:layout_toEndOf="@+id/idRow"
              android:layout_toStartOf="@+id/textView4" android:paddingLeft="5dp" android:paddingRight="5dp"
              android:gravity="left|center" android:textColor="@android:color/white"
              android:layout_alignParentTop="true" android:layout_alignBottom="@+id/idRow"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall" android:text="Заданий"
                  android:id="@+id/textView4" android:textSize="12dp" android:paddingRight="5dp"
                  android:paddingLeft="5dp" android:layout_toEndOf="@+id/txtTitle"
                  android:layout_below="@+id/numb" android:layout_alignParentEnd="true" android:textColor="#ffc8c8c8"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
              android:id="@+id/numb"
              android:textSize="15dp" android:textAlignment="center" android:autoText="false"
              android:gravity="center" android:paddingTop="5dp" android:paddingRight="7dp" android:padding="5dp"
              android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
              android:layout_alignStart="@+id/textView4" android:textColor="#ffc8c8c8"/>
</RelativeLayout>